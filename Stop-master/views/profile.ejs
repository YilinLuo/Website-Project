<% include ./partials/header %>
<% include ./partials/nav %>


<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-lg-3 blue text-center">
      <div class="spacer"></div>
      <h1><%= user.username %> </h1>
      <div class="spacer"></div>
      <h4>Vocab Size</h4>
      <h1><%= user.words.length %></h1>
      <h4>Longest Word</h4>
      <h1><%= user.longestWord %></h1>
      <div class="spacer"></div>

    </div>
    <div class="col-sm-12 col-lg-9" style="">
      <div class="spacer"></div>
      <% if(user.words != null){ %>
        <h1 class="text-center"> Your Dictionary </h1>
        <div class="spacer"></div>
        <div class="card-columns">
        <% var letters = user.letters.sort()
        for(var i= 0; i < letters.length; i++){
          var letter = letters[i] %>
          <div class="card m-2 text-center">
            <div class="card-body">
              <h4 class="card-title text-primary"> <%= letter %> </h4>
              <div class="card-text">
          <% for(var j= 0; j < user.words.length; j++){
            var word = user.words[j].value
            if (word.charAt(0) == letter){ %>
                <li class="list-group text-secondary"> <%= word %> </li>
            <%} %>
          <% } %>
              </div>
            </div>
          </div>
        <% } %>
        </div>
      <% } else { %>
        <h3 style="text-align:center;"> You haven't played any words yet :( </h3>
      <% } %>

    </div>
  </div>
  </div>


<% include ./partials/footer %>
